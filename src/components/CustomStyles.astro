---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(55 65 81);
    --aw-color-secondary: rgb(31 41 55);
    --aw-color-accent: rgb(17 24 39);

    --aw-color-text-heading: rgb(17 24 39);
    --aw-color-text-default: rgb(31 41 55);
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-bg-page: rgb(249 250 251);

    --aw-color-bg-page-dark: rgb(17 24 39);

    ::selection {
      background-color: rgb(55 65 81);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(75 85 99);
    --aw-color-secondary: rgb(55 65 81);
    --aw-color-accent: rgb(31 41 55);

    --aw-color-text-heading: rgb(249 250 251);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(156 163 175);
    --aw-color-bg-page: rgb(17 24 39);

    ::selection {
      background-color: rgb(75 85 99);
      color: white;
    }
  }

  /* Blueprint architectural pattern background */
  .bg-blueprint-pattern {
    background-image: 
      linear-gradient(rgba(0, 0, 0, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.05) 1px, transparent 1px),
      linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
    background-size: 
      100px 100px,
      100px 100px,
      20px 20px,
      20px 20px;
    background-position: 
      -1px -1px,
      -1px -1px,
      -1px -1px,
      -1px -1px;
  }
</style>
